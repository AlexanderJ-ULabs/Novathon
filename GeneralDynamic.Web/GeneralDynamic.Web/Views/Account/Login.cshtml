@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager


@inject UserManager<ApplicationUser> UserManager
@{

    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
<div class="row ">

    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3  ">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="blue">
                <i class="fa fa-lock fa-2x"></i>
            </div>
            <div class="card-content">
                <h4 class="card-title"> General Dynamics Login</h4>



                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="form-group label-floating">
                        <label class="control-label">Username</label>
                        <input asp-for="Username" type="text" class="form-control">

                        <span asp-validation-for="Username" class="text-danger"></span>
                        <span class="material-input"></span>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span class="material-input"></span>
                    </div>
                    <div class="checkbox form-horizontal-checkbox">
                        <label>
                            <input asp-for="RememberMe" type="checkbox" name="optionsCheckboxes"><span class="check"></span> Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-fill btn-info">Login</button>

                    @if (!UserManager.Users.Any())
                    {


                        <a class="btn btn-rose pull-right" asp-action="Register"
                           asp-route-returnurl="@ViewData["ReturnUrl"]">REGISTER</a>

                    }




                </form>
            </div>
        </div>
    </div>
</div>


































@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}